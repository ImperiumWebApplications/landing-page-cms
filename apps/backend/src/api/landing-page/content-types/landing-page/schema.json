{
  "kind": "collectionType",
  "collectionName": "landing_pages",
  "info": {
    "singularName": "landing-page",
    "pluralName": "landing-pages",
    "displayName": "Landing Pages",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "domain": {
      "type": "string"
    },
    "brand_name": {
      "type": "string"
    },
    "color_primary": {
      "type": "customField",
      "customField": "plugin::color-picker.color"
    },
    "color_secondary": {
      "type": "customField",
      "customField": "plugin::color-picker.color"
    },
    "color_tertiary": {
      "type": "customField",
      "customField": "plugin::color-picker.color"
    },
    "color_text": {
      "type": "customField",
      "customField": "plugin::color-picker.color"
    },
    "contact_email": {
      "type": "email"
    },
    "contact_phone": {
      "type": "string"
    },
    "favicon": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "questionnaire": {
      "type": "component",
      "repeatable": false,
      "component": "questionnaire.questionnaire"
    },
    "client_address": {
      "type": "text"
    },
    "client_vat": {
      "type": "string"
    },
    "agb": {
      "type": "richtext"
    },
    "sections": {
      "type": "dynamiczone",
      "components": [
        "sections.call-to-action",
        "sections.faq",
        "sections.hero",
        "sections.images",
        "sections.reviews",
        "sections.services",
        "sections.statistics",
        "sections.video"
      ]
    },
    "service_type": {
      "type": "string",
      "private": true
    },
    "google_allow_indexation": {
      "type": "boolean",
      "default": true
    },
    "google_tag_manager_id": {
      "type": "string",
      "regex": "^(GTM-[A-Z0-9]{7})$",
      "required": false
    },
    "funnel_target": {
      "type": "enumeration",
      "enum": ["Questionnaire", "Appointment"],
      "default": "Questionnaire"
    },
    "appointment": {
      "displayName": "Appointment",
      "type": "component",
      "repeatable": false,
      "component": "appointment.appointment"
    },
    "questionnaires_relations": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::questionnaire.questionnaire",
      "inversedBy": "landing_pages_relations"
    },
    "questionnaires_entry_question": {
      "type": "string"
    },
    "questionnaires_advantages": {
      "type": "component",
      "repeatable": false,
      "component": "questionnaire.advantages"
    },
    "countries": {
      "type": "customField",
      "options": [
        "Germany:DE",
        "Switzerland:CH",
        "Austria:AT",
        "USA:US",
        "Thailand:TH"
      ],
      "customField": "plugin::multi-select-field.multi-select-field",
      "default": ["DE"]
    },
    "language": {
      "type": "enumeration",
      "enum": ["German", "English"],
      "default": "German"
    },
    "deleted": {
      "type": "boolean",
      "default": false,
      "private": true
    },
    "seo_title": {
      "type": "customField",
      "options": {
        "maxLength": 55
      },
      "customField": "plugin::input-real-time-validation.input-real-time-validation"
    },
    "seo_description": {
      "type": "customField",
      "customField": "plugin::input-real-time-validation.input-real-time-validation",
      "options": {
        "maxLength": 155
      }
    },
    "enable_postal_code": {
      "type": "boolean",
      "default": true
    }
  }
}
